@using System.Runtime.InteropServices.JavaScript
@model cosmonautica_v2.Dtos.RootDto
@{
}
@if (@Model != null)
{
    
    <div class="container">
        <div class="row">
            <div class="card">
                <form method="post" asp-controller="Nasa" asp-action="GetDates">
                    <div class="col">
                        <input type="date" class="form-control" name="date" value="@DateTime.Now.Date.ToString("yyyy-MM-dd")"/>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-success" >Filtrar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            @foreach (var foto in @Model.photos)
            {
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="@foto.img_src" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@foto.earth_date</h5>
                            <p class="card-text">@foto.camera.full_name</p>
                            <a href="@foto.img_src" class="btn btn-primary">Ver mas de cerca</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        el api de la nasa se encuentra un poco ocupada ahora
    </div>
}


